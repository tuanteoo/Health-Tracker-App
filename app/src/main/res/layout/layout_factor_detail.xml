<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Factors Health Detail"
        android:textSize="26sp"
        android:fontFamily="@font/dm_sans_bold"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:layout_below="@+id/text"
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/text_namefactor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Factor:"
            android:textSize="20sp"
            android:fontFamily="@font/dm_sans_bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/layout_name_factor"
            android:layout_toEndOf="@+id/text_namefactor"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Factor:"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/dm_sans"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text3"
        android:layout_below="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/text_valuefactor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Factor:"
            android:textSize="20sp"
            android:fontFamily="@font/dm_sans_bold"
            android:layout_centerVertical="true"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/layout_value_factor"
            android:layout_toEndOf="@+id/text_valuefactor"
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/dm_sans"
            tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_update"
        android:layout_below="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:background="@drawable/btn_design"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="130dp"
    app:cardCornerRadius="30dp"
    android:id="@+id/layout_item_factors"
    android:backgroundTint="#FAECF0"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/relay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/item_health_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_heart"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/item_health_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart Rate"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/item_health_icon"
                android:textColor="#D2416E"
                android:layout_marginStart="10dp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/relay1"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/item_value_factors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78"
                android:textColor="#D2416E"
                android:textStyle="bold"
                android:textSize="40sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/item_measure_factors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bpm"
                android:textColor="#D2416E"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@id/item_value_factors"
                android:layout_toEndOf="@+id/item_value_factors"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>